#!/usr/bin/env arturo

packages: # "packages/list.art"

entries: #[]

loop packages [k,v][
    entries\[k]: #[
        info: # ~"packages/info/|k|.art"
        version: do read ~"packages/version/|k|.art"
    ]
]

inspect entries

; render homepage
write "public/index.html"
      render.template read "website/index.html"

; compile scss
execute "sass website/style.scss public/style.css"

print "Done!"
